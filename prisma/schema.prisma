generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_URL")
}

model Page {
  page_id            String   @id
  page_datecreated   DateTime @default(now())
  page_title         String
  page_last_accessed DateTime
  page_user_id       String
  User               User     @relation(fields: [page_user_id], references: [user_id])
  Story              Story?
  Todo               Todo[]

  @@unique([page_user_id, page_title], name: "user_title_unique")
}

model Routine {
  routine_id String @id
  Todo       Todo   @relation(fields: [routine_id], references: [todo_id])
}

model Story {
  story_id          String   @id
  story_datecreated DateTime @default(now())
  story_user_id     String
  story_title       String
  story_page_id     String   @unique
  Page              Page     @relation(fields: [story_page_id], references: [page_id])
  User              User     @relation(fields: [story_user_id], references: [user_id])
  Todo              Todo[]

  @@unique([story_user_id, story_title], name: "story_user_title_unique")
}

model Todo {
  todo_id          String   @id
  todo_datecreated DateTime @default(now())
  todo_description String
  todo_done        Boolean  @default(false)
  todo_user_id     String
  todo_page_id     String
  todo_archived    Boolean  @default(false)
  todo_highlight   Boolean  @default(false)
  todo_story_id    String?
  Page             Page     @relation(fields: [todo_page_id], references: [page_id])
  Story            Story?   @relation(fields: [todo_story_id], references: [story_id])
  User             User     @relation(fields: [todo_user_id], references: [user_id])
  Routine          Routine?
}

model User {
  user_id          String   @id
  user_email       String   @unique
  user_username    String   @unique
  user_lastseen    DateTime
  user_datecreated DateTime @default(now())
  user_avatar      String
  user_fullname    String
  user_bio         String?
  user_followers   String[]
  user_following   String[]
  Page             Page[]
  Story            Story[]
  Todo             Todo[]
}
